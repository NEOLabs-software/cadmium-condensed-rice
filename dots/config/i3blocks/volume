#!/usr/bin/bash
read -ra WP < /tmp/wp
if [[ $button ]]; then
	if ((button > 3)); then
		wpctl set-volume ${WP[0]} 2%$( ((button == 4)) && echo + || echo -)
	elif ((button == 1)); then
		wpctl set-mute ${WP[0]} toggle
	else
		xterm -e pulsemixer
	fi
fi

read -ra ARR <<< "$(wpctl get-volume ${WP[0]})"
VOL=${ARR[1]/./}
VOL=${VOL##0}
MUTED=${ARR[2]}

if [[ $MUTED ]]; then
	ICON=
elif ((VOL >= 70)); then
	ICON=
elif ((VOL >= 30)); then
	ICON=
else
	ICON=
fi

TEXT="$ICON $VOL%"
notify-send -a signal -h int:value:$VOL -h string:synchronous:volume "$TEXT"
echo "$TEXT"
[[ $MUTED ]] && exit 33
